<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/window_background"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="환경설정"
        android:textSize="14dp"
        android:textStyle="bold"
        android:textColor="@color/text_secondary"
        android:lineSpacingExtra="8.7sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:gravity="left|center_vertical"
        android:background="@android:color/transparent"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="18dp"
        android:textColor="@color/text_primary"
        android:lineSpacingExtra="14.4sp"
        android:text="검색결과관리"
        />

    <View
        android:background="@color/stroke"
        android:layout_width="328dp"
        android:layout_height="1dp"/>

    <Button
        android:gravity="left|center_vertical"
        android:background="@android:color/transparent"
        android:id="@+id/access"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="18dp"
        android:textColor="@color/text_primary"
        android:lineSpacingExtra="14.4sp"
        android:text="접근권한설정"
        />


    <TextView
        android:text="유니브캠"
        android:textSize="14dp"
        android:textStyle="bold"
        android:textColor="@color/text_secondary"
        android:lineSpacingExtra="8.7sp"
        android:layout_marginTop="31dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:gravity="left|center_vertical"
        android:background="@android:color/transparent"
        android:id="@+id/share_button"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="18dp"
        android:textColor="@color/text_primary"
        android:lineSpacingExtra="14.4sp"
        android:text="유니브캠 공유하기"
        />

    <View
        android:background="@color/stroke"
        android:layout_width="328dp"
        android:layout_height="1dp"/>

    <Button
        android:gravity="left|center_vertical"
        android:background="@android:color/transparent"
        android:id="@+id/evaluate_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="18dp"
        android:textColor="@color/text_primary"
        android:lineSpacingExtra="14.4sp"
        android:text="유니브캠 평가하기"
        />





    <TextView
        android:text="세부사항"
        android:textSize="14dp"
        android:textStyle="bold"
        android:textColor="@color/text_secondary"
        android:lineSpacingExtra="8.7sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"/>

    <RelativeLayout
        android:gravity="left|center_vertical"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">


        <Button
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:layout_alignParentLeft="true"
            android:background="@android:color/transparent"
            android:id="@+id/version_information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColor="@color/text_primary"
            android:lineSpacingExtra="14.4sp"
            android:text="버전 정보"
            />

        <TextView
            android:layout_marginRight="16dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            android:id="@+id/developer_github"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColor="@color/text_primary"
            android:lineSpacingExtra="14.4sp"
            android:text="1.0.0"
            />
    </RelativeLayout>

    <View
        android:background="@color/stroke"
        android:layout_width="328dp"
        android:layout_height="1dp"/>


    <Button
        android:gravity="left|center_vertical"
        android:background="@android:color/transparent"
        android:id="@+id/developer_github"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="18dp"
        android:textColor="@color/text_primary"
        android:lineSpacingExtra="14.4sp"
        android:text="개발자 깃허브"
        />

    <View
        android:background="@color/stroke"
        android:layout_width="328dp"
        android:layout_height="1dp"/>

    <Button
        android:gravity="left|center_vertical"
        android:background="@android:color/transparent"
        android:id="@+id/designer_information"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="18dp"
        android:textColor="@color/text_primary"
        android:lineSpacingExtra="14.4sp"
        android:text="디자이너 정보"
        />

    <View
        android:background="@color/stroke"
        android:layout_width="328dp"
        android:layout_height="1dp"/>

    <Button
        android:gravity="left|center_vertical"
        android:background="@android:color/transparent"
        android:id="@+id/opensource_license"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="18dp"
        android:textColor="@color/text_primary"
        android:lineSpacingExtra="14.4sp"
        android:text="오픈소스 라이센스"
        />


</LinearLayout>