<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_gravity="top"
            android:layout_marginLeft="4dp"
            android:background="@android:color/transparent"
            android:tint="@color/dialog_text"
            android:id="@+id/cancel_button"
            android:padding="13dp"
            android:src="@drawable/ic_close_white_24dp"
            android:layout_width="40dp"
            android:layout_height="40dp" />




        <TextView
            android:layout_gravity="top"
            android:layout_marginLeft="16dp"
            android:text="사진 삭제"
            android:textStyle="bold"
            android:textSize="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:textColor="@color/text_primary"
            android:lineSpacingExtra="11.2sp"/>


        <LinearLayout
            android:layout_marginTop="64dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">


            <TextView
                android:layout_marginLeft="16dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="@color/gunmetal"
                android:text="선택된 "
                />
            <TextView
                android:id="@+id/pictureCount"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="@color/gunmetal"
                android:text="3"
                />

            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="@color/gunmetal"
                android:text="장의 사진이 영구적으로 삭제됩니다"
                />

        </LinearLayout>



        <TextView
            android:layout_gravity="top"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="@color/gunmetal"
            android:lineSpacingExtra="9.9sp"
            android:text="사진을 정말 삭제하시겠습니까?"
            />

        <TextView
            android:layout_gravity="top"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/gunmetal"
            android:lineSpacingExtra="9.9sp"
            android:text="삭제된 사진은 복구되지 않습니다"
            />


    </LinearLayout>


    <LinearLayout
        android:layout_marginBottom="112dp"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:textStyle="bold"
            android:background="@android:color/transparent"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:textSize="24sp"
            android:textColor="@color/gunmetal"
            android:lineSpacingExtra="1.9dp"
            android:text="취소"
            tools:ignore="RtlHardcoded" />

        <Button
            android:layout_marginLeft="84dp"
            android:textStyle="bold"
            android:background="@android:color/transparent"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:textSize="24sp"
            android:textColor="@color/warm_pink"
            android:lineSpacingExtra="1.9dp"
            android:text="삭제"
            tools:ignore="RtlHardcoded" />
    </LinearLayout>



</LinearLayout>

